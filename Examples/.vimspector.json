{
    "configurations": {
        "Cpp: Launch": {
            "adapter": "vscode-cpptools",
            "configuration": {
                "name": "Cpp: Launch",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceRoot}/factorial",
                "args": ["3"],
                "cwd": "${workspaceRoot}",
                "environment": [],
                "externalConsole": true,
                "MIMode": "gdb"
            }
        },
        "Python: Launch": {
            "adapter": "debugpy",
            "filetypes": [ "python" ],
            "configuration": {
                "name": "python: Launch",
                "type": "python",
                "request": "launch",
                "cwd": "${workspaceRoot}",
                "python": "/usr/bin/python3",
                "stopOnEntry": true,
                "console": "externalTerminal",
                "debugOptions": [],
                "program": "test.py",
                "args": []
            }
        }
    }
}

